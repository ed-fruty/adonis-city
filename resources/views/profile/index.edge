<html>
    <body>
        
        <h2>
            Hello, {{ auth.user.username }}
        </h2>
        <a href="{{ route('auth.logout') }}">logout</a>
        <hr>
        <div>
            <h3>{{ user.username.toUpperCase() }} personal information:</h3>
            <div>
                Profile name: {{ user.username }} <br>
                Profile email: {{ user.email }}
            </div>
        </div>
        <hr>
        <div>
            <h3>{{ user.username.toUpperCase() }} works with projects:</h3>

            <ul>
                @each(project in projects)
                    <li>{{ project.name }}</li>
                @endeach
            </ul>
        </div>
    </body>
</html>